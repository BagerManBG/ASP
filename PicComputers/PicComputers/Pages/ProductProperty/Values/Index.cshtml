@page
@model PicComputers.Pages.ProductProperty.Values.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Property Values</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductPropertyValue[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPropertyValue[0].ProductProperty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductPropertyValue) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductProperty.Key)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProductPropertyValueId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProductPropertyValueId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProductPropertyValueId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
